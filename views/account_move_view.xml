<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="invoice_report_view_inherit" model="ir.ui.view">
            <field name="name">account_move_inh</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="after">
                    <field name="invoice_type" widget="radio"/>
                </xpath>

                <xpath expr="//page[@id='other_tab']" position="inside">
                    <group string="Report Information" name="report_info_group">
                        <field name="iqd_currency_id"/>
                        <field name="company_currency_id"/>
                        
                        <field name="partner_due"/>
                        <field name="partner_due_iqd"/>
                        
                        <field name="previous_customer_debit"/>
                        <field name="iqd_previous_customer_debit"/>
                        
                        <field name="current_customer_debit"/>
                        <field name="iqd_current_customer_debit"/>
                    </group>
                </xpath>
            </field>
        </record>

        <record id="account_payment_form_nuboogh" model="ir.ui.view">
            <field name="name">account.payment.form.nuboogh</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='partner_id']" position="attributes">
                    <attribute name="domain">[('company_id', 'in', [company_id, False])]</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
